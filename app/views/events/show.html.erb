<table class="profile" summary="Profile information">
	<tr>
		<td class="main">
			<h1>
				<%= @event.name %></br>
			</h1>
			Event <%= @event.formatted_date %></br>
			Category: <%= @event.category %></br>
			Description: <%= @event.description %></br>
			<%= render 'attend' %></br></br>
			<%= render :partial => 'events/attendees' %></br>
			<%= image_tag @event.photo.url(:medium) unless @event.photo.nil? %>		
		</td>
		<%= render 'sidebar' %>
	</tr>
</table>