<div id="page" class="top_bg_in">
	<div id="inner_pages" class="clearfix">
		<h1>Events</h1>

		<div class="breadcrumb clearfix">
			<div class="breadcrumb_in"></div>
		</div>

		<div id="content" class="content_index clearfix">
			<ul class="sort_by">
				<li class="title"> Events :</li>
				<li class="current"> <%= link_to "Upcoming", events_path %> </li>
				<li class> <%= link_to "Other", events_path %> </li>
			</ul>
		<%= render 'events' %>
		</div>
		
		<div id="sidebar">
			<div id="map_canvas" style="width: 294px; height: 370px; position: relative">
				<%#= gmaps({ map_options: {
								zoom: 8,
								auto_zoom: false },
							markers: { data: @json } }) %>
			</div>
		</div>
		
		<%= button_to "Create Event", create_event_path %>
		<%= button_to "Show My Events", my_events_path %>
		
	</div>
</div>