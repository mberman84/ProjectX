<h1>All Events</h1>

<%= button_to "Create Event", create_event_path %>
<%= button_to "Show My Events", my_events_path %>

<%= form_tag events_path, :method => 'get', :id => "events_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<table class="pretty">
<tr>
  <th><%= sortable "name" %></th>
  <th><%= sortable "event_date", "Date" %></th>
  <th><%= "Actions" %>
</tr>
	  <div id="events"><%= render 'events' %></div>
</table>

<% end %>