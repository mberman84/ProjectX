<h1>My Events</h1>

<%= button_to "Create Event", create_event_path %></br>

<ul>
<% @my_events.each do |event| %>
	<%= link_to event.name, event %>
	<% if (event.owner_id == current_user.id) %>
		(Owner)
	<% end %>
	<%= event.event_date.strftime(" on %m/%d/%Y at %I:%M%p") unless event.event_date.nil?%>
	| <%= link_to 'Decline', remove_attendee_event_path(:id => event.id, :user_id => current_user.id), :method => :post %>
	
	<% if current_user.admin? %>
		| <%= link_to "Delete", event, :method => :delete, :confirm => "You sure?",
								  :title => "Delete #{event.name}" %>
	<% end %>

	<% if (event.owner_id == current_user.id) || current_user.admin? %>
		| <%= link_to "Edit Event", edit_event_path(event.id), :method => :post %>
	<% end %></br>
<% end %>
</ul>