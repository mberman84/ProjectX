<h1>Edit User</h1>

<%= form_for(@user) do |f| %>
	<%= render 'fields', :f => f %>
	<div class="actions">
		<%= f.label :name %><br />
		<%= f.text_field :name %><%= f.submit "Update" %>
	</div>
	<div>
		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails" target = "_blank">change</a>
	</div>
<% end %>