<% current_user.following.limit(10).each do |followed| %>
	<li>
		<%= gravatar_for followed %>
		<div class="content">
			<h4><%= link_to followed.name, followed %></h4>
			<div class="content_right">
				<%= form_for(current_user.relationships
										 .find_by_followed_id(followed),
				             :html => { :method => :delete }) do |f| %>
				  <div class="actions"><%= f.submit "Unfollow" %></div>
				<% end %>
			</div>
		</div>
	</li>
<% end %>